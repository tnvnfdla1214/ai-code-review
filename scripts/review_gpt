import os
import json
import requests
from openai import OpenAI

# í™˜ê²½ ë³€ìˆ˜ì—ì„œ API í‚¤ ë° ì„¤ì •ê°’ ê°€ì ¸ì˜¤ê¸°
OPENAI_API_KEY = os.getenv("OPENAI_API_KEY")
GITHUB_TOKEN = os.getenv("GITHUB_TOKEN")
REPO = os.getenv("GITHUB_REPOSITORY")
PR_NUMBER = os.getenv("GITHUB_EVENT_NUMBER")

# OpenAI GPT API ì„¤ì •
client = OpenAI(api_key=OPENAI_API_KEY)

# GitHubì—ì„œ PRì˜ ë³€ê²½ëœ ì½”ë“œ ê°€ì ¸ì˜¤ê¸°
def get_pr_files():
    url = f"https://api.github.com/repos/{REPO}/pulls/{PR_NUMBER}/files"
    headers = {"Authorization": f"token {GITHUB_TOKEN}"}

    print(f"ğŸ” Fetching PR files from: {url}")
    response = requests.get(url, headers=headers)

    if response.status_code == 200:
        return response.json()
    else:
        print(f"âŒ Error fetching PR files: {response.json()}")
        return []

# OpenAI GPT APIë¥¼ ì‚¬ìš©í•´ ì½”ë“œ ë¦¬ë·° ìƒì„±
def request_code_review(code):
    try:
        response = client.completions.create(
            model="gpt-4",
            messages=[
                {"role": "system", "content": "ë‹¹ì‹ ì€ ì½”ë“œ ë¦¬ë·°ì–´ì…ë‹ˆë‹¤. ì£¼ì–´ì§„ ì½”ë“œì— ëŒ€í•œ í”¼ë“œë°±ì„ ì œê³µí•˜ì„¸ìš”."},
                {"role": "user", "content": code}
            ]
        )
        return response["choices"][0]["message"]["content"].strip()
    except Exception as e:
        print(f"âŒ Error calling OpenAI API: {e}")
        return "ì½”ë“œ ë¦¬ë·°ë¥¼ ë°›ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤."

# GitHub PRì— ë¦¬ë·° ëŒ“ê¸€ ì¶”ê°€
def comment_on_pr(comment):
    url = f"https://api.github.com/repos/{REPO}/issues/{PR_NUMBER}/comments"
    headers = {
        "Authorization": f"token {GITHUB_TOKEN}",
        "Accept": "application/vnd.github.v3+json"
    }
    payload = {"body": comment}

    response = requests.post(url, headers=headers, json=payload)
    if response.status_code == 201:
        print("âœ… Successfully commented on PR.")
    else:
        print(f"âŒ Error commenting on PR: {response.status_code} - {response.json()}")

# ì‹¤í–‰ ë¡œì§
if __name__ == "__main__":
    pr_files = get_pr_files()
    for file in pr_files:
        filename = file["filename"]
        patch = file.get("patch", "")
        if patch:
            review_comment = request_code_review(f"File: {filename}\n\n{patch}")
            comment_on_pr(f"### Code Review for `{filename}`\n\n{review_comment}")
